<% layout('layouts/boilerplate') %>

<div
  class="d-flex justify-content-center align-items-center min-vh-100"
  style="background: linear-gradient(135deg, #ffffff, #b6b6b6); padding: 1rem"
>
  <div class="card shadow-lg border-0 rounded-4 overflow-hidden w-100" style="max-width: 900px">
    <div class="row g-0 flex-grow-1 flex-column flex-md-row">
      <!-- LEFT SIDE: Banner -->
      <div class="col-md-6 position-relative order-1 order-md-0" style="min-height: 200px">
        <img
          src="/images/pikoy-banner.jpg"
          alt="Welcome Banner"
          class="img-fluid h-100 w-100"
          style="object-fit: cover; filter: brightness(70%); height: 100%"
        />
      </div>

      <!-- RIGHT SIDE: Login Form -->
      <div class="col-md-6 bg-white d-flex align-items-center justify-content-center p-4 p-md-5">
        <div class="w-100" style="max-width: 380px">
          <h3 class="fw-semibold text-center mb-4">Login</h3>

          <form action="/login" method="POST" class="needs-validation" novalidate>
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label fw-medium">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                required
                placeholder="Enter your username"
              />
              <div class="invalid-feedback">Please enter your username.</div>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label fw-medium">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
                placeholder="Enter your password"
              />
              <div class="invalid-feedback">Please enter your password.</div>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Login</button>
          </form>

          <p class="text-center mt-3 mb-0">
            Donâ€™t have an account?
            <a href="/register" class="text-decoration-none fw-medium">Signup here</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Extra mobile tweaks */
  @media (max-width: 768px) {
    .card {
      border-radius: 1rem;
    }

    .col-md-6.position-relative img {
      height: 220px !important; /* reduce banner height on mobile */
    }

    form .form-control {
      font-size: 0.95rem;
      padding: 0.6rem 0.75rem;
    }

    button.btn {
      font-size: 0.95rem;
    }
  }
</style>
