<% layout('layouts/boilerplate') %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-6 col-md-8">
    <div class="card shadow border-0 rounded-3">
      <div class="card-body p-4">
        <h3 class="card-title text-center mb-4">Edit Product</h3>

        <form 
          action="/products/<%= foundProduct._id %>?_method=PUT" 
          method="POST"
          class="needs-validation" 
          novalidate
        >
          <!-- Product Name -->
          <div class="mb-3">
            <label for="name" class="form-label">Product Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= foundProduct.name %>"
              required
            />
            <div class="invalid-feedback">Please enter a product name.</div>
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label for="price" class="form-label">Price ($)</label>
            <input
              type="number"
              class="form-control"
              id="price"
              name="price"
              value="<%= foundProduct.price %>"
              min="0"
              required
            />
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <!-- Market Price -->
                <div class="mb-3">
                  <label for="marketPrice" class="form-label">Market Price</label>
                  <input
                  value="<%= foundProduct.marketPrice %>"
                    type="number"
                    name="marketPrice"
                    id="marketPrice"
                    class="form-control"
                    placeholder="Enter product Market Price"
                    required
                  />
                  <div class="invalid-feedback">Please enter a valid price.</div>
                </div>


          <!-- Stock -->
          <div class="mb-3">
            <label for="stock" class="form-label">Stock</label>
            <input
              type="number"
              class="form-control"
              id="stock"
              name="stock"
              value="<%= foundProduct.stock %>"
              min="0"
              required
            />
            <div class="invalid-feedback">Please enter the stock quantity.</div>
          </div>

          <!-- Category -->
          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select 
              class="form-select"
              id="category" 
              name="category" 
              required
            >
              <% for(let cat of categories) { %>
                <option 
                  value="<%= cat %>" 
                  <%= foundProduct.category === cat ? 'selected' : '' %>>
                  <%= cat %>
                </option>
              <% } %>
            </select>
            <div class="invalid-feedback">Please select a category.</div>
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-between">
            <a href="/products" class="btn btn-outline-secondary">
              Cancel
            </a>
            <button type="submit" class="btn btn-primary">
              Save and Exit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
