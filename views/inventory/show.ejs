<% layout('layouts/boilerplate') %>
<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
              <i class="fas fa-box me-2"></i>
              <%= foundProduct.name %> Information
            </h3>
          </div>
          <div class="card-body">
            <p class="fs-5"><strong>üí≤ Price:</strong> <%= foundProduct.price %></p>
            <p class="fs-5"><strong>üì¶ Stock:</strong> <%= foundProduct.stock %></p>
            <p class="fs-5"><strong>üè∑Ô∏è Category:</strong> <%= foundProduct.category %></p>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <a href="/products" class="btn btn-secondary"> <i class="fas fa-arrow-left me-1"></i> Back </a>
            <div>
              <a href="/products/<%= foundProduct._id %>/edit" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i> Edit
              </a>
              <form action="/products/<%= foundProduct._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-danger"><i class="fas fa-trash-alt me-1"></i> Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
