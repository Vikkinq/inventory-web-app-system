<% layout('layouts/boilerplate') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <%- include('../partials/products/sidebar') %>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4" id="mainContent">
      <div class="d-flex flex-column flex-md-row align-items-start justify-content-between mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">ðŸ“¦ Inventory</h1>
      </div>

      <!-- Category + Search + Add -->
      <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4 flex-wrap gap-3">
        <!-- Category Filter (Left) -->
        <div class="d-flex flex-wrap gap-2">
          <a href="/products" class="btn btn-sm <%= !category && !q ? 'btn-primary' : 'btn-outline-primary' %>">
            All
          </a>
          <% categories.forEach(cat => { %>
          <a
            href="/products?category=<%= cat %>"
            class="btn btn-sm <%= category === cat ? 'btn-primary' : 'btn-outline-primary' %>"
          >
            <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
          </a>
          <% }) %>
        </div>

        <!-- Search + Add (Right) -->
        <div class="d-flex flex-wrap align-items-center gap-2">
          <form action="/products" method="get" class="d-flex" role="search">
            <% if (category) { %>
            <input type="hidden" name="category" value="<%= category %>" />
            <% } %>
            <input
              type="text"
              class="form-control me-2"
              name="q"
              placeholder="Search products..."
              value="<%= q || '' %>"
              style="min-width: 220px"
            />
            <button type="submit" class="btn btn-outline-secondary">
              <i class="bi bi-search"></i>
            </button>
          </form>

          <% if (currentUser && currentUser.role === "admin") { %>
          <a href="/products/new" class="btn btn-success"> <i class="bi bi-plus-circle me-1"></i> Add Product </a>
          <% } %>
        </div>
      </div>

      <hr class="my-3" />

      <!-- Inventory Table (Desktop) -->
      <div class="d-none d-md-block">
        <div class="table-responsive shadow-sm rounded">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th class="text-center">Category</th>
                <th class="text-end">Price</th>
                <th class="text-center">Market Price</th>
                <th class="text-center">Stock</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (db.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">No products found</td>
              </tr>
              <% } else { %> <% db.forEach(data => { %>
              <tr>
                <td class="fw-semibold"><%= data.name %></td>
                <td class="text-center"><span class="badge bg-secondary"><%= data.category %></span></td>
                <td class="text-end">â‚±<%= data.price %></td>
                <td class="text-center">â‚±<%= data.marketPrice %></td>
                <td class="text-center"><%= data.stock %></td>
                <td class="text-center">
                  <div class="d-flex justify-content-center gap-1">
                    <a href="/products/<%= data._id %>" class="btn btn-sm btn-primary">
                      <i class="bi bi-eye"></i>
                    </a>

                    <% if (currentUser && currentUser.role === "admin") { %>
                    <a href="/products/<%= data._id %>/edit" class="btn btn-sm btn-success">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <form
                      action="/products/<%= data._id %>?_method=DELETE"
                      method="POST"
                      onsubmit="return confirm('Delete this product?')"
                    >
                      <button type="submit" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                    <% } %>
                  </div>
                </td>
              </tr>
              <% }) %> <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Mobile Cards -->
      <div class="d-md-none">
        <% if (db.length === 0) { %>
        <p class="text-center text-muted mt-4">No products found</p>
        <% } else { %>
        <div class="row g-3">
          <% db.forEach(data => { %>
          <div class="col-12">
            <div class="card shadow-sm border-0">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title fw-semibold mb-0"><%= data.name %></h5>
                  <span class="badge bg-secondary"><%= data.category %></span>
                </div>
                <p class="mb-1">Price: <strong>â‚±<%= data.price %></strong></p>
                <p class="mb-1">Market Price: â‚±<%= data.marketPrice %></p>
                <p class="mb-3">Stock: <%= data.stock %></p>

                <div class="d-flex gap-2">
                  <a href="/products/<%= data._id %>" class="btn btn-sm btn-primary flex-fill">
                    <i class="bi bi-eye"></i> View
                  </a>

                  <% if (currentUser && currentUser.role === "admin") { %>
                  <a href="/products/<%= data._id %>/edit" class="btn btn-sm btn-success flex-fill">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <form
                    action="/products/<%= data._id %>?_method=DELETE"
                    method="POST"
                    class="flex-fill"
                    onsubmit="return confirm('Delete this product?')"
                  >
                    <button type="submit" class="btn btn-sm btn-danger w-100">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>
      </div>
      <!-- Pagination Controls -->
      <% if (totalPages > 1) { %>
      <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
          <!-- Prev Button -->
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a
              class="page-link"
              href="?p=<%= currentPage - 1 %><%= q ? '&q=' + q : '' %><%= category ? '&category=' + category : '' %>"
            >
              Previous
            </a>
          </li>

          <!-- Page Numbers -->
          <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a
              class="page-link"
              href="?p=<%= i %><%= q ? '&q=' + q : '' %><%= category ? '&category=' + category : '' %>"
            >
              <%= i %>
            </a>
          </li>
          <% } %>

          <!-- Next Button -->
          <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
            <a
              class="page-link"
              href="?p=<%= currentPage + 1 %><%= q ? '&q=' + q : '' %><%= category ? '&category=' + category : '' %>"
            >
              Next
            </a>
          </li>
        </ul>
      </nav>
      <% } %>
    </main>
  </div>
</div>
