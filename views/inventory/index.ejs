<% layout('layouts/boilerplate') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <%- include('../partials/products/sidebar') %>

    <!-- Main Section -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4" id="mainContent">
      <!-- Page Header -->
      <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">ðŸ“¦ Inventory</h1>

        <div class="d-flex flex-column flex-md-row align-items-md-center gap-2">
          <!-- Add Product -->
          <a href="/products/new" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add Product </a>

          <!-- Search -->
          <form action="/products" method="get" class="d-flex">
            <% if (category) { %>
            <input type="hidden" name="category" value="<%= category %>" />
            <% } %>
            <input
              type="text"
              class="form-control me-2"
              name="q"
              placeholder="Search products..."
              value="<%= q || '' %>"
            />
            <button class="btn btn-outline-secondary">
              <i class="bi bi-search"></i>
            </button>
          </form>
        </div>
      </div>

      <!-- Category Filter -->
      <div class="mb-4">
        <div class="d-flex flex-wrap gap-2">
          <a href="/products" class="btn btn-sm <%= !category ? 'btn-primary' : 'btn-outline-primary' %>"> All </a>
          <% categories.forEach(cat => { %>
          <a
            href="/products?category=<%= cat %>"
            class="btn btn-sm <%= category === cat ? 'btn-primary' : 'btn-outline-primary' %>"
          >
            <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
          </a>
          <% }) %>
        </div>
      </div>

      <!-- Divider -->
      <hr class="my-3" />

      <!-- Inventory Table (Desktop) -->
      <div class="d-none d-md-block">
        <div class="table-responsive shadow-sm rounded">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th class="text-center">Category</th>
                <th class="text-end">Price</th>
                <th class="text-center">Market Price</th>
                <th class="text-center">Stock</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (db.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">No products found</td>
              </tr>
              <% } else { %> <% db.forEach(data => { %>
              <tr>
                <td class="fw-semibold"><%= data.name %></td>
                <td class="text-center">
                  <span class="badge bg-secondary"><%= data.category %></span>
                </td>
                <td class="text-end">â‚±<%= data.price %></td>
                <td class="text-center">â‚±<%= data.marketPrice %></td>
                <td class="text-center"><%= data.stock %></td>
                <td class="text-center">
                  <a href="/products/<%= data._id %>" class="btn btn-sm btn-primary me-1">
                    <i class="bi bi-eye"></i>
                  </a>
                  <a href="/products/<%= data._id %>/edit" class="btn btn-sm btn-success me-1">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form action="/products/<%= data._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button
                      type="submit"
                      class="btn btn-sm btn-danger"
                      onclick="return confirm('Delete this product?')"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %> <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Inventory Cards (Mobile) -->
      <div class="d-md-none">
        <% if (db.length === 0) { %>
        <p class="text-center text-muted">No products found</p>
        <% } else { %>
        <div class="row g-3">
          <% db.forEach(data => { %>
          <div class="col-12">
            <div class="card shadow-sm border-0">
              <div class="card-body">
                <h5 class="card-title fw-semibold mb-1"><%= data.name %></h5>
                <p class="mb-1">
                  <span class="badge bg-secondary"><%= data.category %></span>
                </p>
                <p class="mb-1">Price: <strong>â‚±<%= data.price %></strong></p>
                <p class="mb-2">Stock: <%= data.stock %></p>
                <div class="d-flex gap-2">
                  <a href="/products/<%= data._id %>" class="btn btn-sm btn-primary flex-fill">
                    <i class="bi bi-eye"></i> View
                  </a>
                  <a href="/products/<%= data._id %>/edit" class="btn btn-sm btn-success flex-fill">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <form action="/products/<%= data._id %>?_method=DELETE" method="POST" class="flex-fill">
                    <button
                      type="submit"
                      class="btn btn-sm btn-danger w-100"
                      onclick="return confirm('Delete this product?')"
                    >
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>
      </div>
    </main>
  </div>
</div>
