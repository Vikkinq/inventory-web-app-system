<% layout('layouts/boilerplate') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar (Left) -->
    <%- include('../partials/products/sidebar') %>

    <!-- Main content -->
    <main class="col-md-7 ms-sm-auto col-lg-7 px-md-4">
      <h1 class="h2 mt-4">Sales</h1>

      <div class="row my-4 g-3">
        <% for(let p of allProducts){ %>
        <div class="col-md-4">
          <div
            class="card shadow-sm h-100 product-card"
            data-id="<%= p._id %>"
            data-name="<%= p.name %>"
            data-price="<%= p.price %>"
            data-market="<%= p.marketPrice %>"
            data-stock="<%= p.stock %>"
            style="cursor: pointer"
          >
            <div class="card-body text-center">
              <h5 class="card-title"><%= p.name %></h5>
              <p class="card-text fs-2 fw-bold text-primary">₱<%= p.price %></p>
              <small class="text-muted">Stock: <%= p.stock %></small>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </main>

    <!-- Cart Sidebar -->
    <div class="col-md-3 bg-white border-start d-flex flex-column position-sticky" style="top: 0; height: 100vh">
      <div class="p-3 border-bottom">
        <h4 class="mb-0">Cart</h4>
      </div>

      <!-- Cart items scrollable list -->
      <div id="cart-items" class="list-group list-group-flush flex-grow-1 overflow-auto">
        <!-- Items will be rendered here by JS -->
      </div>

      <!-- Cart summary footer -->
      <div class="p-3 border-top">
        <div class="d-flex justify-content-between mb-2">
          <span class="fw-semibold">Total:</span>
          <span id="cart-total" class="fs-5">₱0.00</span>
        </div>
        <div class="d-flex justify-content-between mb-3 text-muted small">
          <span>Profit:</span>
          <span id="cart-profit" class="fs-5">₱0.00</span>
        </div>

        <!-- Customer Payment Input -->
        <div class="mb-2">
          <label for="customer-payment" class="form-label small fw-semibold">Customer Payment:</label>
          <input
            type="number"
            min="0"
            step="0.01"
            id="customer-payment"
            class="form-control form-control-sm"
            placeholder="Enter amount given"
          />
        </div>
        <div class="d-flex justify-content-between mb-3">
          <span class="fw-semibold">Change:</span>
          <span id="change-amount" class="fs-3">₱0.00</span>
        </div>

        <!-- Buttons -->
        <div class="d-grid gap-2">
          <button id="checkout-btn" class="btn btn-primary btn-sm">Checkout</button>
          <button
            id="utang-btn"
            class="btn btn-outline-warning btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#utangModal"
          >
            Save as Utang
          </button>
          <button id="clear-cart-btn" class="btn btn-outline-danger btn-sm">Clear Cart</button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Utang Modal -->
<div class="modal fade" id="utangModal" tabindex="-1" aria-labelledby="utangModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <form id="utang-form" method="POST" action="/utang">
        <div class="modal-header">
          <h5 class="modal-title" id="utangModalLabel">
            <i class="fa-solid fa-hand-holding-dollar me-2"></i>Add Utang
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <!-- Person name -->
          <div class="mb-3">
            <label for="person" class="form-label">Person Name</label>
            <input type="text" class="form-control" id="person" name="person" required />
          </div>

          <!-- Cart preview inside modal -->
          <div class="table-responsive">
            <table class="table table-sm align-middle">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Price</th>
                  <th>Qty</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody id="utang-items">
                <!-- JS will copy cart here -->
              </tbody>
              <tfoot>
                <tr class="fw-bold">
                  <td colspan="3" class="text-end">Total:</td>
                  <td id="utang-total">₱0.00</td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning">Save Utang</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/sales.js"></script>
<script src="/js/utang.js"></script>
