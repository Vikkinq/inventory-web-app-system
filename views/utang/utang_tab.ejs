<% layout('layouts/boilerplate') %>
<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <%- include('../partials/products/sidebar') %>

    <!-- Main content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="pt-3 pb-2 mb-3 border-bottom d-flex justify-content-between align-items-center">
        <h1 class="h2"><i class="fa-solid fa-book"></i> Utang Records</h1>
      </div>

      <!-- Utang Table -->
      <div class="table-responsive card shadow-sm">
        <table class="table table-striped align-middle mb-0">
          <thead>
            <tr>
              <th>Customer</th>
              <th>Total</th>
              <th>Paid</th>
              <th>Balance</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% utangs.forEach(u => { %>
            <tr>
              <td><i class="fa-solid fa-user"></i> <%= u.person %></td>
              <td>â‚±<%= u.totalAmount.toFixed(2) %></td>
              <td>â‚±<%= u.paidAmount.toFixed(2) %></td>
              <td>â‚±<%= u.balance.toFixed(2) %></td>
              <td>
                <span class="badge <%= u.status === 'paid' ? 'bg-success' : 'bg-warning text-dark' %>">
                  <%= u.status %>
                </span>
              </td>
              <td class="text-end">
                <% if (u.status === "active") { %>

                <!-- Fully Paid -->
                <form action="/utang/<%= u._id %>/fullpay" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-success">
                    <i class="fa-solid fa-check"></i> Fully Paid
                  </button>
                </form>
                <form action="/utang/<%= u._id %>?_method=DELETE" method="POST" class="d-inline">
                  <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt me-1"></i></button>
                </form>
                <% } %>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

<!-- ðŸ’³ Pay Modal (completely separate form) -->
<div class="modal fade" id="payModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <form method="POST" id="payForm">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="fa-solid fa-money-bill-wave"></i> Record Payment</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p><strong>Customer:</strong> <span id="payPerson"></span></p>
          <p><strong>Remaining Balance:</strong> â‚±<span id="payBalance"></span></p>
          <div class="mb-3">
            <label for="payAmount" class="form-label">Payment Amount</label>
            <input type="number" step="0.01" min="0" name="amount" id="payAmount" class="form-control" required />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Confirm Payment</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/utang.js"></script>
